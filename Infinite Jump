            function(UserInput)
                if InfiniteJumpEnabled == true then
                    if
                        UserInput.UserInputType == Enum.UserInputType.Keyboard and
                            UserInput.KeyCode == Enum.KeyCode.Space
                     then
                        Action(
                            Player.Character.Humanoid,
                            function(self)
                                if
                                    self:GetState() == Enum.HumanoidStateType.Jumping or
                                        self:GetState() == Enum.HumanoidStateType.Freefall
                                 then
                                    Action(
                                        self.Parent.HumanoidRootPart,
                                        function(self)
                                            self.Velocity = Vector3.new(0, _G.JumpHeight, 0)
                                        end
                                    )
                                end
                            end
                        )
                    end
                end
            end
        )
    end
